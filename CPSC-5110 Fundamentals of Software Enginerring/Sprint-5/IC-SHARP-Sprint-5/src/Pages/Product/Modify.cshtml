@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.ModifyModel
@{
    ViewData["title"] = "Modify Page";
}

<div class="content">
    <div class="container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.Product.Id)

            <div class="form-group">
                <label asp-for="Product.Title" class="control-label"></label>
                <input asp-for="Product.Title" class="form-control" placeholder="Title"/>
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" placeholder="Description"/>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Image" class="control-label"></label>
                <input asp-for="Product.Image" class="form-control" placeholder="Image URI" />
                <span asp-validation-for="Product.Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Maker" class="control-label"></label>
                <input asp-for="Product.Maker" class="form-control" placeholder="Maker"/>
                <span asp-validation-for="Product.Maker" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.MakerEmail" class="control-label"></label>
                <input asp-for="Product.MakerEmail" class="form-control" placeholder="Maker" />
                <span asp-validation-for="Product.MakerEmail" class="text-danger"></span>
            </div>

            <div class="form-group glow">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" placeholder="Price" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
